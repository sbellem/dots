[merge]
	tool = vimdiff
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	# Handle umlauts and such better on OS X
	precomposeunicode = false
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	pager = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[alias]
	br = branch
	co = checkout
	ci = commit
	df = diff
	rb = rebase
	st = status
	last = log -1 HEAD
